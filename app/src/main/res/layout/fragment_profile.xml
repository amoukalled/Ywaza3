<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:strokeColor="@color/app_theme"
            app:strokeWidth="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/browser_actions_bg_grey"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/accountbox" />

                <TextView
                    android:id="@+id/textview_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/image_profile"
                    android:textColor="@color/darkTextColor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textview_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_email"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/image_profile"
                    android:textColor="@color/darkTextColor"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/image_team"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/textview_username"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="320dp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/change_username"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/browser_actions_bg_grey"
                android:hint="Change User Name"
                android:textColor="@color/darkTextColor"
                app:strokeColor="@color/app_theme"
                app:strokeWidth="1dp">

            </com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/change_favteam"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/browser_actions_bg_grey"
                android:hint="Change Favourite Team"
                android:textColor="@color/darkTextColor"
                app:strokeColor="@color/app_theme"
                app:strokeWidth="1dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sign_out"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/browser_actions_bg_grey"
                android:hint="Sign Out"
                android:textColor="@color/darkTextColor"
                app:strokeColor="@color/app_theme"
                app:strokeWidth="1dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/change_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/browser_actions_bg_grey"
                android:hint="Reset Password"
                android:textColor="@color/darkTextColor"
                app:strokeColor="@color/red"
                app:strokeWidth="1dp">

            </com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete_account"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/browser_actions_bg_grey"
                android:hint="Delete Account"
                android:textColor="@color/darkTextColor"
                app:strokeColor="@color/red"
                app:strokeWidth="1dp">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>

    </LinearLayout>


</ScrollView>