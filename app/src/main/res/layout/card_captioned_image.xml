<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trips_card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="8dp"
    android:outlineAmbientShadowColor="@color/app_theme"
    android:scrollbars="vertical"
    app:cardCornerRadius="15dp"
    app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_team_image_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/home_team_score_text_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:textSize="60sp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text="-"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/away_team_score_text_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:textSize="60sp"
            android:layout_marginTop="30dp" />

        <ImageView
            android:id="@+id/away_team_image_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_team_text_view"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:layout_marginTop="150dp" />

        <TextView
            android:id="@+id/away_team_text_view"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:textSize="18sp"
            android:layout_marginTop="150dp" />


    </LinearLayout>


</androidx.cardview.widget.CardView>

